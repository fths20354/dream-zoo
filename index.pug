            //-include nav.pug 熱氣球
            include nav.pug
            //-門框
            div(id="door")
                //-觀賞園區
                +areablock("animal-block", "animalpark/animal-park.html", "image/animals.png", "觀賞園區")
                //-互動園區
                +areablock("active-block", "activepark/active-park.html", "image/farm.png", "互動園區")
                //-主題咖啡廳
                +areablock("coffee-block", "coffee/coffee.html", "image/coffee.png", "主題咖啡廳")
                //-精品禮品店
                +areablock("present-block", "present/present.html", "image/souvenir.png", "精品禮品店")
                //-活動展覽
                +areablock("event-block", "event/event.html", "image/circus2.png", "活動展覽")
            include leading.pug
            //-地面-版權聲明
            include footer.pug



